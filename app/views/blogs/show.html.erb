<div class="col-md-12" style="padding-top: 30px">
    <div class="card flex-md-row mb-10 shadow-sm ">
      <div class="card-body d-flex flex-column align-items-start">
        <h2 class="mb-0">
          <a class="text-dark"><%= @blog.title %></a>
        </h2>
        <div class="mb-1 text-muted" style="padding-top: 10px">Published <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</div>
        <p class="card-text mb-auto" style="padding-top: 10px"><%= link_to 'Edit (Admin Option)', edit_blog_path(@blog) if logged_in?(:site_admin) %></p>
        <p class="card-text mb-auto" style="padding-top: 10px; padding-bottom: 10px"><%= @blog.body %></p>
        <%= link_to 'Back', blogs_path, class: 'btn btn-secondary' %>
      </div>
    </div>
</div>
