<h1>Ruby Portfolio Items</h1>

<%= link_to "Create New Portfolio", new_portfolio_path if logged_in?(:site_admin) %>

<% @portfolio_items.each do |portfolio_item_number| %>
		<p><%= link_to portfolio_item_number.title, portfolio_show_path(portfolio_item_number) %></p>
		<p><%= portfolio_item_number.subtitle %></p>
		<p><%= portfolio_item_number.body %></p>
		<%= image_tag portfolio_item_number.thumb_image if !portfolio_item_number.thumb_image.nil? %>
		<%= link_to "Edit", edit_portfolio_path(portfolio_item_number.id) if logged_in?(:site_admin) %>
		<%= link_to 'Delete', portfolio_path(portfolio_item_number), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>
