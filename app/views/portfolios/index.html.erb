<h1>Portfolio Items</h1>

<%= link_to "Create New Portfolio", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item_number| %>
		<p><%= portfolio_item_number.title %></p>
		<p><%= portfolio_item_number.subtitle %></p>
		<p><%= portfolio_item_number.body %></p>
		<%= image_tag portfolio_item_number.thumb_image if !portfolio_item_number.thumb_image.nil? %>
		<%= link_to "Edit", edit_portfolio_path(portfolio_item_number.id) %>
<% end %>
